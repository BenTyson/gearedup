---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';

// Fetch stats
const [productsResult, pagesResult] = await Promise.all([
  supabase.from('products').select('id, category', { count: 'exact' }),
  supabase.from('recommendation_pages').select('id, category', { count: 'exact' }),
]);

const productCount = productsResult.count || 0;
const pageCount = pagesResult.count || 0;

// Count by category
const categoryCounts: Record<string, { products: number; pages: number }> = {};
productsResult.data?.forEach((p) => {
  if (!categoryCounts[p.category]) {
    categoryCounts[p.category] = { products: 0, pages: 0 };
  }
  categoryCounts[p.category].products++;
});
pagesResult.data?.forEach((p) => {
  if (!categoryCounts[p.category]) {
    categoryCounts[p.category] = { products: 0, pages: 0 };
  }
  categoryCounts[p.category].pages++;
});
---

<AdminLayout title="Dashboard" activeNav="dashboard">
  <!-- Stats cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl p-6 border border-neutral-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-neutral-500">Total Products</p>
          <p class="text-3xl font-bold text-neutral-900">{productCount}</p>
        </div>
        <div class="w-12 h-12 bg-brand-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
        </div>
      </div>
      <a href="/admin/products" class="mt-4 inline-block text-sm text-brand-600 hover:text-brand-700">
        Manage products &rarr;
      </a>
    </div>

    <div class="bg-white rounded-xl p-6 border border-neutral-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-neutral-500">Recommendation Pages</p>
          <p class="text-3xl font-bold text-neutral-900">{pageCount}</p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
      <a href="/admin/pages" class="mt-4 inline-block text-sm text-brand-600 hover:text-brand-700">
        Manage pages &rarr;
      </a>
    </div>

    <div class="bg-white rounded-xl p-6 border border-neutral-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-neutral-500">Categories</p>
          <p class="text-3xl font-bold text-neutral-900">{Object.keys(categoryCounts).length}</p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Category breakdown -->
  <div class="bg-white rounded-xl border border-neutral-200">
    <div class="px-6 py-4 border-b border-neutral-200">
      <h2 class="text-lg font-semibold text-neutral-900">Content by Category</h2>
    </div>
    <div class="divide-y divide-neutral-200">
      {Object.entries(categoryCounts).sort((a, b) => a[0].localeCompare(b[0])).map(([category, counts]) => (
        <div class="px-6 py-4 flex items-center justify-between">
          <div>
            <p class="font-medium text-neutral-900 capitalize">{category.replace('-', ' ')}</p>
            <p class="text-sm text-neutral-500">
              {counts.products} products &middot; {counts.pages} pages
            </p>
          </div>
          <div class="flex gap-2">
            <a
              href={`/admin/products?category=${category}`}
              class="px-3 py-1 text-xs font-medium text-brand-600 bg-brand-50 rounded-full hover:bg-brand-100"
            >
              Products
            </a>
            <a
              href={`/admin/pages?category=${category}`}
              class="px-3 py-1 text-xs font-medium text-green-600 bg-green-50 rounded-full hover:bg-green-100"
            >
              Pages
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Quick actions -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
    <a
      href="/admin/products/new"
      class="bg-white rounded-xl p-6 border border-neutral-200 hover:border-brand-300 hover:shadow-sm transition-all flex items-center gap-4"
    >
      <div class="w-12 h-12 bg-brand-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
      </div>
      <div>
        <p class="font-semibold text-neutral-900">Add New Product</p>
        <p class="text-sm text-neutral-500">Create a new product entry</p>
      </div>
    </a>

    <a
      href="/admin/pages/new"
      class="bg-white rounded-xl p-6 border border-neutral-200 hover:border-green-300 hover:shadow-sm transition-all flex items-center gap-4"
    >
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
      </div>
      <div>
        <p class="font-semibold text-neutral-900">Add New Page</p>
        <p class="text-sm text-neutral-500">Create a new recommendation page</p>
      </div>
    </a>
  </div>
</AdminLayout>
