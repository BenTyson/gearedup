---
import { categories } from '@/data/categories';

const currentYear = new Date().getFullYear();
---

<footer class="bg-neutral-900 text-neutral-300">
  <div class="container-wide py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
      <!-- Brand -->
      <div class="md:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 bg-brand-500 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <span class="text-xl font-bold text-white">
            Geared<span class="text-brand-400">Up</span>
          </span>
        </a>
        <p class="text-sm text-neutral-400 leading-relaxed">
          Curated gear recommendations for hobbyists. Find the best equipment for your passion.
        </p>
      </div>

      <!-- Categories -->
      <div>
        <h3 class="text-white font-semibold mb-4">Categories</h3>
        <ul class="space-y-2">
          {categories.map((category) => (
            <li>
              <a
                href={`/${category.slug}/`}
                class="text-sm text-neutral-400 hover:text-white transition-colors"
              >
                {category.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-white font-semibold mb-4">Resources</h3>
        <ul class="space-y-2">
          <li>
            <a href="/about/" class="text-sm text-neutral-400 hover:text-white transition-colors">
              About Us
            </a>
          </li>
          <li>
            <a href="/about/#methodology" class="text-sm text-neutral-400 hover:text-white transition-colors">
              Our Methodology
            </a>
          </li>
          <li>
            <a href="/about/#contact" class="text-sm text-neutral-400 hover:text-white transition-colors">
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-white font-semibold mb-4">Legal</h3>
        <ul class="space-y-2">
          <li>
            <a href="/privacy/" class="text-sm text-neutral-400 hover:text-white transition-colors">
              Privacy Policy
            </a>
          </li>
          <li>
            <a href="/terms/" class="text-sm text-neutral-400 hover:text-white transition-colors">
              Terms of Use
            </a>
          </li>
          <li>
            <a href="/disclosure/" class="text-sm text-neutral-400 hover:text-white transition-colors">
              Affiliate Disclosure
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Affiliate Disclosure -->
    <div class="mt-12 pt-8 border-t border-neutral-800">
      <p class="text-xs text-neutral-500 leading-relaxed max-w-3xl">
        <strong class="text-neutral-400">Affiliate Disclosure:</strong> GearedUp is reader-supported.
        When you buy through links on our site, we may earn an affiliate commission at no additional cost to you.
        This helps us continue providing honest, independent recommendations.
        <a href="/disclosure/" class="text-brand-400 hover:text-brand-300 underline">Learn more</a>.
      </p>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-neutral-800 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-neutral-500">
        &copy; {currentYear} GearedUp. All rights reserved.
      </p>
      <p class="text-sm text-neutral-500">
        Made with care for hobbyists everywhere.
      </p>
    </div>
  </div>
</footer>
