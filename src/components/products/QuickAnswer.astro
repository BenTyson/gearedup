---
import type { Product } from '@content/config';
import AffiliateLink from './AffiliateLink.astro';

interface Props {
  product: Product;
  pageTitle: string;
}

const { product, pageTitle } = Astro.props;
---

<div class="quick-answer-box mb-10">
  <div class="flex items-center gap-2 text-brand-700 font-semibold text-sm uppercase tracking-wider mb-4">
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
    </svg>
    Quick Answer
  </div>

  <div class="flex flex-col md:flex-row gap-6">
    <!-- Product Image -->
    <div class="md:w-1/3">
      <div class="bg-white rounded-xl p-4 border border-brand-200">
        <img
          src={product.image}
          alt={`${product.brand} ${product.name}`}
          class="w-full h-48 object-contain"
          loading="eager"
        />
      </div>
    </div>

    <!-- Product Info -->
    <div class="md:w-2/3">
      <div class="flex items-start justify-between gap-4 mb-2">
        <h2 class="text-2xl font-bold text-neutral-900">
          {product.brand} {product.name}
        </h2>
        <span class="badge badge-best-overall shrink-0">
          Best Overall
        </span>
      </div>

      <p class="text-sm text-neutral-500 mb-3">Best for: {product.bestFor}</p>
      <p class="text-lg text-neutral-700 mb-6 leading-relaxed">{product.verdict}</p>

      <div class="flex flex-wrap items-center gap-4">
        <span class="text-3xl font-bold text-neutral-900">~${product.price}</span>
        <AffiliateLink href={product.affiliateUrl} text="Check Price on Amazon" />
      </div>
    </div>
  </div>
</div>
